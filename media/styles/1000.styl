.navigation
	background-color dark-grey
	@media screen and (max-width: 768px)
		position static

.hamburger
	@media screen and (max-width: 768px)
		display none

.menu
	@media screen and (max-width: 768px)
		height auto
		opacity 1
		position static
		display flex
		justify-content center

.menu__item
	padding 10px 20px
	color white
	font-size 18px
	transition-property background
	transition-duration .3s
	&:active
		transition-property background
		transition-duration .3s
		background-color dark-grey
	
.logo__slider
	

.logo__image
	width 100%