.navigation
	background-color dark-grey
	@media screen and (min-width: 768px)
		position static

.hamburger
	@media screen and (min-width: 768px)
		display none

.menu
	@media screen and (min-width: 768px)
		height auto
		opacity 1
		position static
		display flex
		justify-content center
	
.block__caption
	@media screen and (min-width: 768px)
		font-size 30px
		margin 10px 0 30px
	
.block__text
	@media screen and (min-width: 768px)
		font-size 20px

.block__image
	@media screen and (min-width: 768px)
		width 700px
		display block
		margin 0 auto

.block__imgcapt
	@media screen and (min-width: 768px)
		text-align center
		font-size 17px

.block__item
	@media screen and (min-width: 768px)
		margin 0 0 10px 40px
		padding 0 0 0 20px

.block__contact
	@media screen and (min-width: 768px)
		display flex
		justify-content center
		align-items center

.block__map
	@media screen and (min-width: 768px)
		width 50%

.block__list
	@media screen and (min-width: 768px)
		width 50%

.copyright
	@media screen and (min-width: 768px)
		display flex
		flex-direction row

.copyright__text
	@media screen and (min-width: 768px)
		text-align left
		margin 10px 30px 10px 20px
		&:last-child
			margin 10px 20px 10px 30px